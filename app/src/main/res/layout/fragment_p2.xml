<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".P2">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cr_bg01" ></com.flaviofaria.kenburnsview.KenBurnsView>
    <TextView
        android:id="@+id/tvTotalProfit"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/transparent_b"
        android:gravity="center"
        android:text="總獲利金額\n4521美元"
        android:textColor="#2196F3"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvCurrentProfitPercent"
        android:layout_width="224dp"
        android:layout_height="163dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="290dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/transparent_b"
        android:gravity="center"
        android:text="目前獲利率\n33.33%"
        android:textColor="#2196F3"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvCurrentState"
        android:layout_width="222dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="256dp"
        android:layout_marginBottom="189dp"
        android:background="@drawable/transparent_b"
        android:gravity="center"
        android:text="目前資產\n25473美元"
        android:textColor="#2196F3"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvProfitPercentMax"
        android:layout_width="185dp"
        android:layout_height="147dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="127dp"
        android:background="@drawable/transparent_r"
        android:gravity="center"
        android:text="最高獲利率\n10%"
        android:textColor="#F11305"
        android:textSize="20dp" />

</RelativeLayout>

</FrameLayout>