<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text1_h"
        android:layout_width="640dp"
        android:layout_height="200dp"
        android:background="@drawable/circle2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />


    <ImageView
        android:id="@+id/headIcon_h"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/text1_h"
        android:layout_alignTop="@+id/text1_h"
        android:layout_marginStart="80dp"
        android:layout_marginTop="36dp"
        android:background="#00000000"
        android:gravity="center"
        />
    <TextView
        android:layout_toRightOf="@id/headIcon_h"
        android:id="@+id/middle01_h"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="           "
        ></TextView>
    <TextView
        android:layout_toRightOf="@+id/middle01_h"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myItem_h"
        android:textSize="24dp"
        android:textColor="@android:color/white"
        android:text="暱稱:\n最後所持現金:\n最高獲利率:\n最高虧損率:\n結束日期:"></TextView>
    <TextView
        android:id="@+id/name_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/text1_h"
        android:layout_alignTop="@id/text1_h"
        android:text="name"
        android:textSize="26dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_purple"

        ></TextView>

    <TextView
        android:id="@+id/cash_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/text1_h"
        android:layout_below="@id/name_h"
        android:text="200000"
        android:textSize="26dp"
        android:layout_marginEnd="100dp"
        android:textColor="@android:color/holo_purple"

        ></TextView>
    <TextView
        android:id="@+id/get_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/text1_h"
        android:layout_below="@id/cash_h"
        android:text="20%"
        android:textSize="26dp"
        android:layout_marginEnd="100dp"
        android:textColor="@android:color/holo_purple"

        ></TextView>
    <TextView
        android:id="@+id/lose_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/text1_h"
        android:layout_above="@id/date_h"
        android:text="20%"
        android:textSize="26dp"
        android:layout_marginEnd="100dp"
        android:textColor="@android:color/holo_purple"

        ></TextView>
    <TextView
        android:id="@+id/date_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/text1_h"
        android:layout_alignBottom="@id/text1_h"
        android:text="2000/04/04"
        android:textSize="26dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/holo_purple"

        ></TextView>

</RelativeLayout>